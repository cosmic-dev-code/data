
<!-- ##########======================########## -->
<!-- ######====== Estructura (XML) ======###### -->
<!-- ##########======================########## -->

<!-- Esta es la etiqueta mas importate y siempre debe ir encima del documento. -->
<?xml version="1.0" encoding="UTF-8"?>

<!-- Eres tu quien crea las etiquetas, (no hay etiquetas reservadas). -->

<!-- Simpre debe haber una etiqueta padre que contenga las demas. -->
<raiz>
	<!-- Elementos hijo dentro de la etiqueta padre. -->
	<!-- Cada elemento tiene su contenido. -->
	<hijo>Contenido</hijo>
	<hijo>
		<subhijo>Contenido</subhijo>
		<subhijo>Contenido</subhijo>
		<subhijo>Contenido</subhijo>
	</hijo>
</raiz>

<!-- ##########===================================########## -->
<!-- ######====== Inventamos nuestras etiquetas ======###### -->
<!-- ##########===================================########## -->

<?xml version="1.0" encoding="UTF-8"?>

<!-- Dado que (XML) se utiliza para transportar datos, podemos 
inventar nuestras propias etiquetas sin ningun problemas. -->

<!-- Tenemos una etiqueta llamada (comidas) la cual es el elemento (raiz). -->
<comidas>
	<!-- Notose que cada elementi hijo es similar al otro, (mas no iguales), esto se hace asi para que sea 
	mas facil de leer por otras aplicaciones.

	Cada elemento tiene las mismas etiquetas pero con diferente valor. -->
	<comida>
		<nombre>Sopa de pollo</nombre>
		<precio>$18.50</precio>
		<cantidad>38</cantidad>
	</comida>

	<comida>
		<nombre>Sopa instantanea</nombre>
		<precio>$33.50</precio>
		<cantidad>30</cantidad>
	</comida>
	
	<comida>
		<nombre>Galletas</nombre>
		<precio>$5</precio>
		<cantidad>18</cantidad>
	</comida>
</comidas>

<!-- ##########================================########## -->
<!-- ######====== Distincion entre etiquetas ======###### -->
<!-- ##########================================########## -->

<!-- Las etiquetas (XML) distinguen entre mayusculas y minusculas. -->

<padre>
	
	<Etiqueta>
		<texto>La etiqueta padre esta en mayuscula.</texto>
	</Etiqueta>
	<etiqueta>
		<texto>La etiqueta padre esta en minuscula.</texto>
	</etiqueta>

</padre>

<!-- Existe la posibilidad de colocar etiquetas que cierren por si solas. -->
<!-- Elige la manera que se acomode mejor a tu necesidad. -->

<etiquetasdecierre>
	
	<!-- No requieren de una etiqueta de </cierre> -->
	<br/>
	<salto/>
	<saltodelinea/>

</etiquetasdecierre>